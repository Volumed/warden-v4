{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"lib": ["ESNext"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"resolveJsonModule": true,
		"types": ["node"],
		"declaration": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
